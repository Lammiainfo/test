<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/insta_gr"
    tools:context=".Instagram">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="22dp">


        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="202dp"
            android:fontFamily="cursive"
            android:text="Instagram"
            android:textColor="@color/white"

            android:textSize="58sp" />

      <EditText
          android:id="@+id/edtCode"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="#85ffffff"
          android:layout_marginTop="35dp"
          android:hint="Email or phone"
          android:textColorHint="@color/white"
         />
        <EditText
            android:id="@+id/edtmotpasse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#85ffffff"
            android:layout_marginTop="20dp"
            android:hint="Email or phone"
            android:textColorHint="@color/white"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:background="@drawable/rectangle"


            android:text="connexion" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Informations de connexion oubliÃ©es?"
            android:textColor="@color/white"
            android:textSize="10sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="obtenez de l'aide pour vous connecter."
                android:textColor="@color/white"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>
  </LinearLayout>